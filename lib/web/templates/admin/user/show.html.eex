<section class="content-header">
  <h1>
    <%= AccountView.full_name(@user) %>
  </h1>

  <ol class="breadcrumb">
    <li>
      <%= link(to: Routes.admin_dashboard_path(@conn, :index)) do %>
        <i class="fa fa-dashboard"></i> Home
      <% end %>
    </li>
    <li><%= link("Users", to: Routes.admin_user_path(@conn, :index)) %></li>
    <li class="active"><%= AccountView.full_name(@user) %></li>
  </ol>
</section>

<section class="content">
  <div class="row">
    <div class="col-md-6">
      <div class="box box-primary">
        <div class="box-header">
          <h3 class="box-title">Basics</h3>
        </div>
        <div class="box-body">
          <dl>
            <dt>Name</dd>
            <dd><%= AccountView.full_name(@user) %></dd>
            <br/>

            <dt>Phone Number</dd>
            <dd><%= phone_number(@user) %></dd>
            <br/>

            <dt>Email</dd>
            <dd><%= @user.email %></dd>
            <br/>

            <dt>Role</dd>
            <dd><%= @user.role %></dd>
            <br/>

            <dt>Verified email?</dt>
            <dd><%= email_verified?(@user) %></dd>
          </dl>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="box box-primary">
        <div class="box-header">
          <h3 class="box-title">Actions</h3>
        </div>

        <div class="box-body">
          <p>
            <%= if @user.suspended do %>
              <%= link("Renew user", to: Routes.admin_user_path(@conn, :toggle, @user.id, action: "suspend"), method: :post, class: "btn btn-default") %>
            <% else %>
              <%= link("Suspend user", to: Routes.admin_user_path(@conn, :toggle, @user.id, action: "suspend"), method: :post, class: "btn btn-default") %>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
